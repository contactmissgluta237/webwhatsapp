{
    "preset": "laravel",
    "rules": {
        "blank_line_before_statement": {
            "statements": ["return"]
        },
        "class_attributes_separation": {
            "elements": {
                "method": "one"
            }
        }
    },
    "exclude": [
        "vendor",
        "node_modules",
        "bootstrap/cache",
        "storage",
        "public/build",
        "database/migrations",
        "*.blade.php"
    ]
}
